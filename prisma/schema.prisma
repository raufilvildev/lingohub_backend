generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @default(autoincrement()) @id
  name String
  last_name String
  email String @unique
  username String @unique
  password String
  img_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}